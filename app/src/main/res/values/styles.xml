<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!-- Theme.Skrill is now defined in themes.xml -->
    
    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="colorPrimaryDark">@color/background_primary</item>
        <item name="colorAccent">@color/accent_pink</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextPrimary">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextHeading">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAmount">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Action Button Style -->
    <style name="ActionButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/action_button_bg</item>
    </style>

    <!-- Partner Card Style -->
    <style name="PartnerCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/partner_card_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Custom Switch Style -->
    <style name="CustomSwitch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

</resources>
